package websites;

import java.sql.*;

public class MySQLDemo {
 
  
    static final String JDBC_DRIVER = "com.mysql.jdbc.Driver";  
    static final String DB_URL = "jdbc:mysql://10.20.88.150:3306/s11712116";
 
    
    static final String USER = "u11712116";
    static final String PASS = "11712116";
 
    public static void main(String[] args) {
        Connection conn = null;
        Statement stmt = null;
        try{
         
            Class.forName("com.mysql.jdbc.Driver");
        
            System.out.println("连接数据库...");
            conn = DriverManager.getConnection(DB_URL,USER,PASS);
        
            System.out.println(" 实例化Statement对象...");
            stmt = conn.createStatement();
            String sql;
            // sql = "INSERT 6, name, url FROM websites";
            
            // 3.准备插入的SQL语句
            sql = "INSERT INTO customers (id,name,url) " 
                    +"VALUES ('6','百度','baidu.com')";
            stmt.executeUpdate(sql);
            sql = "SELECT id, name, url FROM websites";
            
            ResultSet rs = stmt.executeQuery(sql);
//            PreparedStatement psql=conn.prepareStatement("insert into emp (id,name,url)"+
//            "values(?,?,?)");
//            psql.setInt(1, 6);
//            psql.setString(2, "百度");
//
//            psql.setString(3, "https:s//www.baidu.com");
//            psql.executeUpdate();
//            psql.close();
            while(rs.next()){
                int id  = rs.getInt("id");
                String name = rs.getString("name");
                String url = rs.getString("url");
                
                System.out.print("ID: " + id);
                System.out.print(", 站点名称:" + name);
                System.out.print(", 站点 URL:" + url);
                System.out.print("\n");
            }
            
            rs.close();
            stmt.close();
            conn.close();
        }catch(SQLException se){
            se.printStackTrace();
        }catch(Exception e){
            e.printStackTrace();
        }finally{
            try{
                if(stmt!=null) stmt.close();
            }catch(SQLException se2){
            }
            try{
                if(conn!=null) conn.close();
            }catch(SQLException se){
                se.printStackTrace();
            }
        }
        System.out.println("Goodbye!");
    }
}