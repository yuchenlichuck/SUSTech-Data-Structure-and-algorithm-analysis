package speedï¼›
import java.util.Scanner;

public class L1{
	public static void main(String[] args) {
		Scanner in = new Scanner(System.in);
		int a = in.nextInt();int sum = 0;
		int[] m = new int[50008];
		for (int i=1;i<=a;i++) {
			int b = in.nextInt();
			for (int j=1;j<=b;j++) {
				int  m[j]= in.nextInt();
				sum += m[j];				
			}
			double ave = sum / b;int w = 0;
			for (int x=1;x<=b;x++) {		
				for (int y=x+1;y<=b;y++) {
					if ((a[y] + a[x])/2 > ave) {
						w++;
					}
				}
			}
		System.out.println(w);
		}
	}
}
